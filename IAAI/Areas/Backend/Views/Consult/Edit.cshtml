@model IAAI.Models.Business

@{
    ViewBag.Title = "Edit";
    Layout = "~/Areas/Backend/Views/Shared/_Layout.cshtml";
}

@section scripts {
    <script src="https://cdn.ckeditor.com/ckeditor5/40.2.0/classic/ckeditor.js"></script>
    <script>
        ClassicEditor
            .create(document.querySelector('#editor-Consult'))
            .then(editor => {
                editor.setData(document.querySelector('#Consult').value);
                editor.model.document.on('change', () => {
                    document.querySelector('#Consult').value = editor.getData();
                });
            })
            .catch(error => {
                console.error(error);
            });
    </script>
}

