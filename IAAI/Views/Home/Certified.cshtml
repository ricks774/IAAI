@{
    ViewBag.Title = "About";
}
@model IEnumerable<IAAI.Models.CertifiedMember>

<div id="banner-area" class="banner-area" style="background-image: url(/Scripts/Images/banner-bg.jpg) ">
    <!-- Subpage title start -->
    <div class="banner-text text-right">
        <div class="container">
            <div class="row">
                <div class="col-xs-12">
                    <ul class="breadcrumb">
                        <li>首頁</li>
                        <li>關於我們</li>
                        <li><a href="#"> 配證會員</a></li>
                    </ul>
                </div>
            </div>
        </div>
    </div><!-- Subpage title end -->
</div><!-- Banner area end -->

<section id="main-container" class="main-container">
    <div class="container">
        <div class="row">

            <div class="col-lg-3 col-md-3 col-sm-12 col-xs-12">

                <div class="sidebar sidebar-right">
                    <div class="widget">
                        <h2 class="widget-title"><i class="fa fa-folder-open-o">&nbsp;</i>關於我們</h2>
                        <ul class="arrow nav nav-tabs nav-stacked">
                            <li><a href="About">關於我們</a></li>
                            <li><a href="Organization">組織架構</a></li>
                            <li><a href="History">沿革</a></li>
                            <li class="active"><a href="Certified">配證會員</a></li>
                            <li><a href="Expert">專家介紹</a></li>
                        </ul>
                    </div><!-- Categories end -->
                </div><!-- Sidebar end -->
            </div><!-- Sidebar Col end -->

            <div class="col-lg-9 col-md-9 col-sm-12 col-xs-12">

                <h2 class="page-title">配證會員</h2>
                <hr class="botmargin-min">

                <!-- 內容開始 -->
                <div>
                    <h3 style="color:orange">國際會員</h3>
                    <table class="table table-bordered">
                        <thead>
                            <tr style="color: white; background-color: #b1271a">
                                <th class="mdl-data-table__cell--non-numeric">Picture</th>
                                <th class="mdl-data-table__cell--non-numeric">First name</th>
                                <th class="mdl-data-table__cell--non-numeric">Last name</th>
                                <th class="mdl-data-table__cell--non-numeric">Country</th>
                                <th class="mdl-data-table__cell--non-numeric">Title</th>
                                <th class="mdl-data-table__cell--non-numeric">Company</th>
                            </tr>
                        </thead>

                        <tbody>
                            @foreach (var item in Model)
                            {
                                <tr style="border-color: #b1271a; border-width: 2px">
                                    <td class="mdl-data-table__cell--non-numeric">
                                        <img src="@Html.DisplayFor(modelItem => item.Picture)" />
                                    </td>
                                    <td class="mdl-data-table__cell--non-numeric">
                                        @Html.DisplayFor(modelItem => item.FirstName)
                                    </td>
                                    <td class="mdl-data-table__cell--non-numeric">
                                        @Html.DisplayFor(modelItem => item.LastName)
                                    </td>
                                    <td class="mdl-data-table__cell--non-numeric">
                                        @Html.DisplayFor(modelItem => item.Country)
                                    </td>
                                    <td class="mdl-data-table__cell--non-numeric">
                                        @Html.DisplayFor(modelItem => item.Title)
                                    </td>
                                    <td class="mdl-data-table__cell--non-numeric">
                                        @Html.DisplayFor(modelItem => item.Company)
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
                <!-- 內容結束 -->

                <div class="tags-area clearfix">

                    <div class="share-items pull-right">
                        <ul class="post-social-icons unstyled">
                            <li><a href="#"><i class="fa fa-facebook"></i></a></li>
                            <li><a href="#"><i class="fa fa-twitter"></i></a></li>
                            <li><a href="#"><i class="fa fa-google-plus"></i></a></li>
                        </ul>
                    </div>
                </div>
            </div><!-- Content Col end -->
        </div><!-- Main row end -->
    </div><!-- Conatiner end -->
</section><!-- Main container end -->